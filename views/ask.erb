<form action='<%= request.url %>' class='form-horizontal' id='yanc' method='post' onSubmit='return false;'>
  <label><%= t.input.aquarium %></label>
    <input length='4' name='tank_vol' size='4' type='text' />
  <label class="radio">
    <input name='tank_units' type='radio' value='gal' />
      <%= t.units.us_gal %>
    <input name='tank_units' type='radio' value='L' />
      <%= t.units.Liter %>
  <label><%= t.input.source.label %></label>
    <input name='source' onClick="document.getElementById('diy').style.display='block';document.getElementById('premix').style.display='none';" type='radio' value='diy' />
    <%= t.input.source.diy %>
    <input name='source' onClick="document.getElementById('diy').style.display='none';document.getElementById('premix').style.display='block';" type='radio' value='premix' />
    <%= t.input.source.commercial %>
  
  <div id='diy' style='display:none' class="control-group">
    <label><%= t.input.diy.text %></label>
    <select name="compound">
      <% COMPOUNDS.keys.sort.each do |c| %>
	<% if c =~ /KNO3/ %>
	  <option value="<%= c %>" selected="selected"><%= c %></option>
	<% else %>
	  <option value="<%= c %>"><%= c %></option>
        <% end %>
      <% end %>
    </select>
  
    <label class="radio"><%= t.input.diy.method_text %></label>
    <input name='method' onClick="document.getElementById('solution').style.display='block';" type='radio' value='solution' />
    <%= t.input.diy.solution %>
    <input name='method' onClick="document.getElementById('solution').style.display='none';" type='radio' value='dry' />
    <%= t.input.diy.dry %>

    <div id='solution' style='display:none' class='control-group'>
      <label><%= t.input.solution.text %></label>
      <input length='4' name='sol_volume' size='4' type='int' value='500' />
      <%= t.units.milliliter %>
      <label><%= t.input.solution.dose %></label>
      <input length='4' name='sol_dose' size='4' type='int' value='5' />
      <%= t.units.milliliter %>
    </div>

    <label><%= t.input.dosing_method.text %></label>
    <select id='calc_for1' name='calc_for' onChange='showDiv(this.value);'>
      <option value='target'><%= t.input.dosing_method.target %></option>
      <option value='dump'><%= t.input.dosing_method.dose %></option>
      <option selected='selected' value='ei'><%= t.input.dosing_method.ei %></option>
      <option value='ei_daily'><%= t.dosing_method.ei_daily %></option>
      <option value='ei_low'><%= t.dosing_method.ei_low %></option>
      <option value='pps'><%= t.dosing_method.pps %></option>
      <option value='pmdd'><%= t.dosing_method.pmdd %></option>
    </select>

    <div id='dump' style='display:none' class='control-group'>
      <label><%= t.input.dose.text %></label>
      <input length='6' name='dose_amount' size='6' type='int' class="radio"/>
      <input name='dose_units' type='radio' value='mg' />
      <%= t.units.milligrams %>
      <input name='dose_units' type='radio' value='g' />
      <%= t.units.grams %>
      <input name='dose_units' type='radio' value='tsp' />
      <%= t.units.five_milliliter %>
      <span class="help-block"><%= t.input.dose.tooltip %></span>
    </div>
    <div id='target' style='display:none' class='control-group'>
      <label><%= t.input.target %></label>
      <input length='2' name='target_amount' size='4' type='int' />
      <%= t.units.ppm %>
    </div>

  </div>

  <div id='premix' style='display:none' class="control-group">
    <label><%= t.input.diy.text %></label>
    <select name="premix">
      <% COMMERCIAL.keys.sort.each do |c| %>
        <option value="<%= c %>"><%= c %></option>
      <% end %>
    </select>

    <label><%= t.input.dosing_method.text %></label>
    <select id='premix_calc_for' name='premix_calc_for' onChange='showDiv(this.value);'>
      <option value='premix_target'><%= t.input.dosing_method.target %></option>
      <option value='premix_dump'><%= t.input.dosing_method.dose %></option>
      <option selected='selected' value='ei'><%= t.input.dosing_method.ei %></option>
      <option value='ei_daily'><%= t.dosing_method.ei_daily %></option>
      <option value='ei_low'><%= t.dosing_method.ei_low %></option>
      <option value='pps'><%= t.dosing_method.pps %></option>
      <option value='pmdd'><%= t.dosing_method.pmdd %></option>
    </select>
    
    <div id='premix_dump' style='display:none' class='control-group'>
      <label><%= t.input.dose.text %></label>
      <input length='6' name='premix_dose_amount' size='6' type='int' class="radio"/>
      <input name='premix_dose_units' type='radio' value='mL' />
      <%= t.units.milliliter %>
      <input name='premix_dose_units' type='radio' value='caps' />
      <%= t.units.five_milliliter %>
      <input name='premix_dose_units' type='radio' value='pumps' />
      <%= t.units.pump_bottle %>
      <span class="help-block"><%= t.input.dose.tooltip %></span>
    </div>
    <div id='premix_target' style='display:none' class='control-group'>
      <label><%= t.input.target %></label>
      <input length='2' name='premix_target_amount' size='4' type='int' />
      <%= t.units.ppm %>
    </div>
  
  </div>

  <input type='submit' value='<%= t.misc.submit_button %>' id='ask' onlick="_gaq.push(['_trackPageview', '/yanc_submit'])" />
</form>
